<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_gray">

    <RelativeLayout
        android:id="@+id/headerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/backIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:src="@mipmap/ic_back_white" />

            <TextView
                fontPath="@string/font_quicksand_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/backIV"
                android:padding="10dp"
                android:text="Edit profile"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerlayout"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/background" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:id="@+id/headerRelative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="70dp"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:id="@+id/firstRelative"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <EditText
                                        android:id="@+id/firstNameTextView"
                                        fontPath="@string/font_quicksand_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:hint="First Name"
                                        android:inputType="textEmailAddress"
                                        android:maxLength="10"
                                        android:padding="15dp"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/colorPrimary"
                                        android:textSize="16sp" />

                                    <EditText
                                        android:id="@+id/lastNameText"
                                        fontPath="@string/font_quicksand_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:background="@null"
                                        android:gravity="left"
                                        android:hint="Last Name"
                                        android:inputType="text"
                                        android:padding="15dp"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/colorPrimary"
                                        android:textSize="16sp" />

                                </RelativeLayout>


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/soft_gray" />


                                <EditText
                                    android:id="@+id/emailTextView"
                                    fontPath="@string/font_quicksand_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="Email"
                                    android:inputType="text"
                                    android:padding="15dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/colorPrimary"
                                    android:textSize="16sp" />


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/soft_gray" />


                                <EditText
                                    android:id="@+id/phoneNumText"
                                    fontPath="@string/font_quicksand_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:enabled="false"
                                    android:hint="Phone"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:padding="15dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/colorPrimary"
                                    android:textSize="16sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/soft_gray" />


                                <EditText
                                    android:id="@+id/dobTextVIew"
                                    fontPath="@string/font_quicksand_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:editable="false"
                                    android:focusableInTouchMode="false"
                                    android:hint="DOB"
                                    android:inputType="text"
                                    android:padding="15dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/colorPrimary"
                                    android:textSize="16sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/soft_gray" />


                                <EditText
                                    android:id="@+id/addressText"
                                    fontPath="@string/font_quicksand_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="Address"
                                    android:inputType="text"
                                    android:padding="15dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/colorPrimary"
                                    android:textSize="16sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/soft_gray" />


                                <EditText
                                    android:id="@+id/selectRoleEdit"
                                    fontPath="@string/font_quicksand_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:editable="false"
                                    android:focusableInTouchMode="false"
                                    android:hint="Provider Role"
                                    android:inputType="text"
                                    android:padding="15dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/colorPrimary"
                                    android:textSize="16sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/soft_gray" />


                                <EditText
                                    android:id="@+id/workExpEditText"
                                    fontPath="@string/font_quicksand_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="Work Exp year"
                                    android:inputType="number"
                                    android:maxLength="2"
                                    android:padding="15dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/colorPrimary"
                                    android:textSize="16sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/soft_gray" />


                                <EditText
                                    android:id="@+id/dcoImageEdit"
                                    fontPath="@string/font_quicksand_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:editable="false"
                                    android:focusableInTouchMode="false"
                                    android:hint="Doc image"
                                    android:inputType="text"
                                    android:padding="15dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/colorPrimary"
                                    android:textSize="16sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/soft_gray" />


                                <TextView
                                    android:id="@+id/tv_register"
                                    fontPath="@string/font_quicksand_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/confrPasswordEditTextView"
                                    android:layout_gravity="bottom"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="25dp"
                                    android:background="@drawable/blue_rounded_btn_selector"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="SAVE"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:visibility="visible"

                                    />


                                <TextView
                                    android:id="@+id/addSkillsRL"
                                    fontPath="@string/font_quicksand_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="25dp"
                                    android:background="@drawable/orange_rounded_btn_selector"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Add Skills"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:visibility="visible"

                                    />

                            </LinearLayout>


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="30dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="1dp">


                            <ImageView
                                android:id="@+id/userImageView"
                                android:layout_width="@dimen/dp_75"
                                android:layout_height="@dimen/dp_75"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/service_provider_circle" />

                            <ImageView
                                android:id="@+id/editImageClickVIew"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="55dp"
                                android:layout_marginTop="55dp"
                                android:background="@drawable/white_bg_circle"
                                android:padding="5dp"
                                android:src="@mipmap/edit" />
                        </RelativeLayout>


                        <TextView
                            fontPath="@string/font_quicksand_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Service Provider"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:visibility="gone" />


                    </LinearLayout>


                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>