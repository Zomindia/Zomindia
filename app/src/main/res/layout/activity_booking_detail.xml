<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_gray">

    <RelativeLayout
        android:id="@+id/headerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/backIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:src="@mipmap/ic_back_white" />

            <TextView
                fontPath="@string/font_quicksand_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/backIV"
                android:padding="10dp"
                android:text="Booking Detail"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerlayout"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/soft_gray">


            <RelativeLayout
                android:id="@+id/firstRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:padding="2dp"
                                android:src="@mipmap/defult_user" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/imageView"
                                android:gravity="center"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/userNameText"
                                    fontPath="@string/font_quicksand_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16sp" />


                                <TextView
                                    android:id="@+id/bookingID"
                                    fontPath="@string/font_quicksand_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/statusText"
                                    fontPath="@string/font_quicksand_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/green"
                                    android:textSize="16sp" />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/OTPTextView"
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/green_rounded_btn_selector"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstRelative"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/firstTex"
                                        fontPath="@string/font_quicksand_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="Date"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/dateTextView"
                                        fontPath="@string/font_quicksand_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/firstTex"
                                        android:layout_marginTop="10dp"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="15sp" />


                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/lastNameTe"
                                        fontPath="@string/font_quicksand_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="Time"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/timeTextView"
                                        fontPath="@string/font_quicksand_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/lastNameTe"
                                        android:layout_marginTop="10dp"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="15sp" />


                                </RelativeLayout>
                            </RelativeLayout>


                            <TextView
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Phone"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/phoneNumText"
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/dark_gray"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/phoneNumText"
                                android:layout_marginTop="5dp"
                                android:background="@color/soft_gray" />

                            <TextView
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Address"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/addressText"
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/dark_gray"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/addressText"
                                android:layout_marginTop="5dp"
                                android:background="@color/soft_gray" />

                            <TextView
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Nearest landmark"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/addressText2"
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/dark_gray"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/addressText2"
                                android:layout_marginTop="5dp"
                                android:background="@color/soft_gray" />

                            <TextView
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Category"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/categoryTextView"
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/dark_gray"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/categoryTextView"
                                android:layout_marginTop="5dp"
                                android:background="@color/soft_gray" />

                            <TextView
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Sub Category"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/subCategoryTV"
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/dark_gray"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/subCategoryTV"
                                android:layout_marginTop="5dp"
                                android:background="@color/soft_gray" />

                            <TextView
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Sub Category Type"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/subCategoryTypeTV"
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/dark_gray"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/subCategoryTypeTV"
                                android:layout_marginTop="5dp"
                                android:background="@color/soft_gray" />

                            <TextView
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Amount"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/amountTextView"
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/dark_gray"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/amountTextView"
                                android:layout_marginTop="5dp"
                                android:background="@color/soft_gray" />

                            <TextView
                                android:id="@+id/enterOtp"
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Enter OTP"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/enterOtpText"
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:background="@color/soft_gray"
                                android:hint="Enter OTP no"
                                android:maxLength="6"
                                android:padding="10dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/dark_gray"
                                android:textSize="15sp"
                                android:visibility="gone" />


                            <TextView
                                android:id="@+id/sumbitOTP"
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="25dp"
                                android:background="@drawable/blue_rounded_btn_selector"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="SUBMIT"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:visibility="gone"

                                />


                            <TextView
                                android:id="@+id/completeTV"
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="25dp"
                                android:background="@drawable/blue_rounded_btn_selector"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="COMPLETE"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:visibility="gone"

                                />


                            <TextView
                                android:id="@+id/rateTV"
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="25dp"
                                android:background="@drawable/blue_rounded_btn_selector"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="RATE &amp; REVIEW"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:visibility="gone"

                                />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>