<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_30"
                android:gravity="center"
                android:text="Create new password"
                android:textColor="#000080"
                android:textSize="36dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_30"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etRPOTP"
                    fontPath="@string/font_quicksand_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/dark_shape"
                    android:hint="@string/otp"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8D8D"
                    android:textSize="@dimen/dp_20" />

                <EditText
                    android:id="@+id/etRPPassword"
                    fontPath="@string/font_quicksand_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/dark_shape"
                    android:hint="@string/password_text"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8D8D"
                    android:textSize="@dimen/dp_20" />

                <EditText
                    android:id="@+id/etRPCPassword"
                    fontPath="@string/font_quicksand_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/dark_shape"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8D8D"
                    android:textSize="@dimen/dp_20" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvrpSubmit"
                fontPath="@string/font_quicksand_regular"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/dp_30"
                android:background="@mipmap/button_login"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_25"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
