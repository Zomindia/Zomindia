<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/login_with_otp_backgrnd"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_30"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_email"
                    fontPath="@string/font_quicksand_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    android:background="@drawable/dark_shape"
                    android:hint="Email id"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8D8D"
                    android:textSize="@dimen/dp_20" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_pass"
                    fontPath="@string/font_quicksand_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    android:background="@drawable/dark_shape"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8D8D"
                    android:textSize="@dimen/dp_20" />
            </LinearLayout>


            <TextView
                fontPath="@string/font_quicksand_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_30"
                android:gravity="center"
                android:padding="@dimen/dp_20"
                android:text="Login"
                android:textColor="#25358C"
                android:textSize="@dimen/dp_40"
                android:textStyle="bold"
                android:visibility="gone" />


            <TextView
                android:id="@+id/forget_password"
                fontPath="@string/font_quicksand_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="right"
                android:padding="5dp"
                android:text="Forgot Password"
                android:textColor="#25358C"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/btn_wel_login"
                fontPath="@string/font_quicksand_regular"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/dp_30"
                android:background="@mipmap/button_login"
                android:gravity="center"
                android:text="Continue"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_25"
                android:textStyle="bold" />

        </LinearLayout>


    </ScrollView>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If you don't have an account"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:textSize="@dimen/dp_18"
                android:gravity="center"
                android:layout_weight="1"
                fontPath="@string/font_quicksand_regular"
                android:textStyle="bold"
                android:textColor="#000080"


                />
            <TextView
                android:id="@+id/tv_rgister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontPath="@string/font_quicksand_regular"
                android:text="Register Here"
                android:layout_margin="@dimen/dp_5"
                android:textSize="@dimen/dp_20"
                android:padding="@dimen/dp_5"
                android:textStyle="bold"
                android:textColor="@color/green" />

        </LinearLayout>





        <TextView
            android:visibility="gone"
            android:id="@+id/partner_logind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="right"
            android:text="Partner Log-In"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_18">


        </TextView>


    </RelativeLayout>


</RelativeLayout>