<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash_screen01">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".9"
        android:src="@mipmap/bacgroung_new1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/background" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_50">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/splashnewupdate" />

            <TextView
                fontPath="@string/font_logo_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="zomindia"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_60">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="15dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/headr"
                        fontPath="@string/font_quicksand_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/dp_10"
                        android:text="Login"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">





                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp">

                            <EditText
                                android:id="@+id/etPLoginMobile"
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="Phone Number"
                                android:inputType="phone"
                                android:maxLength="10"
                                android:padding="15dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/colorPrimary"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/etPLoginMobile"
                                android:background="@color/soft_gray" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp">

                            <EditText
                                android:id="@+id/etPLoginPassword"
                                fontPath="@string/font_quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="@string/password_text"
                                android:inputType="textPassword"
                                android:padding="15dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/colorPrimary"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/etPLoginPassword"
                                android:background="@color/soft_gray" />
                        </RelativeLayout>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvPLoginLogin"
                        fontPath="@string/font_quicksand_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/confrPasswordEditTextView"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/blue_rounded_btn_selector"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Login"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:visibility="visible"

                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/bootomText"
                            fontPath="@string/font_quicksand_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="No account?"
                            android:textColor="@color/dark_gray"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvPLoginRegister"
                            fontPath="@string/font_quicksand_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/bootomText"
                            android:text="Partners SignUp"
                            android:textColor="@color/green"
                            android:textSize="16sp" />

                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>